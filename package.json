{
  "name": "postcss-load-config",
  "version": "3.1.4",
  "description": "Autoload Config for PostCSS",
  "main": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src"
  ],
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "lint": "standard",
    "test": "pnpm lint && c8 pnpm unit",
    "unit": "tsm node_modules/uvu/bin.js . '\\.test\\.(ts|js)$'",
    "docs": "jsdoc2md src/*.js > DOCS.md",
    "clean": "npx rimraf ./coverage",
    "release": "standard-version"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/postcss/"
  },
  "dependencies": {
    "lilconfig": "^2.0.5",
    "yaml": "^2.1.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/postcss-import": "^14.0.0",
    "c8": "^7.11.3",
    "clean-publish": "^4.0.0",
    "cssnano": "^5.1.9",
    "jsdoc-to-markdown": "^7.1.1",
    "postcss": "^8.4.14",
    "postcss-import": "^14.1.0",
    "postcss-nested": "^5.0.6",
    "standard": "^17.0.0",
    "sugarss": "^4.0.1",
    "ts-node": "^10.8.0",
    "tsm": "^2.2.1",
    "typescript": "4.6.4",
    "uvu": "^0.5.3"
  },
  "peerDependencies": {
    "postcss": ">=8.0.9",
    "ts-node": ">=9.0.0"
  },
  "peerDependenciesMeta": {
    "ts-node": {
      "optional": true
    },
    "postcss": {
      "optional": true
    }
  },
  "c8": {
    "exclude": [
      "**/*.test.*"
    ],
    "lines": 97.64,
    "check-coverage": true
  },
  "prettier": {
    "arrowParens": "avoid",
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "keywords": [
    "postcss",
    "postcssrc",
    "postcss.config.js"
  ],
  "author": "Michael Ciniawky <michael.ciniawsky@gmail.com>",
  "contributors": [
    "Ryan Dunckel",
    "Mateusz Derks",
    "Dalton Santos",
    "Patrick Gilday",
    "Fran√ßois Wouts"
  ],
  "repository": "postcss/postcss-load-config",
  "license": "MIT"
}
